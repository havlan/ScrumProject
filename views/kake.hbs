<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="css/LoginStyle.css">
</head>
{{# if success }}
    <section class="success">
        <h2>Successful Validation!</h2>
    </section>
{{ else }}
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <div class="imgcontainer">
        <img src="http://www.hsdtaxlaw.com/wp-content/uploads/2016/05/20140806_LogoSupporterPlaceholder.png" alt="Logo" class="logo">
    </div>
    <div class="container">
    <form action="/loginMV" method="post">

        <div class="input">
            <label for="email">E-Mail</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="input">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <button type="submit">Login</button>
    </form>
    </div>
{{/if}}